from tkinter import *
from tkinter import ttk
from PIL import Image, ImageTk
import serial 
import time
import sys

raiz=Tk()

recibido = 0

ser = serial.Serial(port='/dev/cu.SLAB_USBtoUART', baudrate=9600, parity=serial.PARITY_NONE, stopbits=serial.STOPBITS_ONE,bytesize=serial.EIGHTBITS, timeout=0)

def function():
	ser.flushInput()
	ser.flushOutput()
	time.sleep(.2)
	ser.write(recibido)
	raiz.after(50, function)

def actualizar():
	global recibido
	angulo1 = valor.get()
	recibido = round((int(angulo1))).to_bytes(1, byteorder = "big")


raiz.resizable(0,0)

raiz.geometry("700x600")

raiz.config(bg="#3B170B")

frame=Frame()

frame.pack()
frame.config(bg="#3B170B", bd="30",relief="groove", cursor="gumby")
frame.config(width="700", height="600")

valor =Entry(frame)
valor.place(x=300, y=150)

enviar= ttk.Button(frame, text="Enviar", command = actualizar)
enviar.place(x=290, y=225)

raiz.after(0, function)
raiz.mainloop()
